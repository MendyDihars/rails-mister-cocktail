<div class="wrapper-card">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-md-6">
          <div class="cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo.path if cocktail.photo? %>')">
            <h2><%= link_to "🍹" + cocktail.name, cocktail_path(cocktail), class: 'link' %></h2>
            <p><%= link_to '❌', cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure to delete this great cocktail?" }, class: 'link' %></p>
            <span class="edit-cocktail"><%= link_to 'Edit 🖊', edit_cocktail_path(cocktail) %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

