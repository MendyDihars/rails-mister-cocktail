<div class="header text-center">
  <h2><%= @cocktail.name %></h2>
  <div class="marged"><%= cl_image_tag @cocktail.photo.path, height: 200, width: 150, crop: :fill %></div>
  <%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' %>
</div>

<div class="wrapper-dose">
  <div class="container">
    <div class="row">
      <% @cocktail.doses.each do |c| %>
        <div class="col-xs-6 col-md-3">
          <div class="dose">
            <h3><%= Ingredient.find(c.ingredient_id).name %></h3>
            <p>- <%= c.description %></p>
            <h4><%= link_to 'â˜ ', cocktail_dose_path(@cocktail, c), method: :delete, data: { confirm: 'Sure buddy?' }, class: 'suppr' %></h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
